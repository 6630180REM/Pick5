<body>
  <div class="container">
    <h3 class="title3">5-0 Records</h3>

    <table id="fiveAnd0Table" class="table">
      <thead>
        <tr class="sticky-top">
          <th class="headers">Name</th>
          <th class="headers">Count</th>
          <th class="headers">Week(s)</th>
        </tr>
        <tr style="height: 7px; border: none; background: #333;">
          <th colspan="9"></th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>

  <script>
    function loadFiveAnd0(data) {
      const tableBody = document.querySelector("#fiveAnd0Table tbody");
      tableBody.innerHTML = "";

      data.forEach(row => {
        const tr = document.createElement("tr");
        tr.innerHTML = `
          <td class="team-name">${row.name}</td>
          <td class="team-numbers" style="font-size: 14px; font-weight: 700;">${row.count}</td>
          <td class="team-numbers"  style="text-align: left; font-weight: 700;">${row.week}</td>
        `;
        tableBody.appendChild(tr);
      });
    }

    // Fetch data
    google.script.run.withSuccessHandler(loadFiveAnd0).getFiveAnd0();
  </script>
</body>

